<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_item_detail"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@android:color/black"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
    <TextView
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:id="@+id/edit"
        android:text="Edit"
        android:clickable="true"
        android:textSize="20sp"
        android:textColor="?attr/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.v7.widget.Toolbar>



    <ImageView
        android:id="@+id/bar_icon"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/textview"
        android:text="Edit"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-45dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:background="#8C000000"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/myRectangleView"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="?attr/colorAccent"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/circle"
        android:background="@drawable/rectangle"
        android:layout_marginTop="-140dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textColor="?attr/colorAccent"
        android:layout_marginTop="-95dp"
        android:textSize="40sp"
        android:layout_gravity="center"
        />

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="50dp"
        android:id="@+id/happyhours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@android:color/white"
        />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3484be"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#3484be">
        <TextView


            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:id="@+id/itineraire"
            android:background="@drawable/ic_directions_black_24dp"
            android:clickable="true"
            android:textSize="20sp"
            android:textColor="?attr/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/rating"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="What do you think of it ?"
        android:textColor="?attr/colorAccent"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2.0"
        android:isIndicator="true"
        android:elevation="10dp"
        android:progressBackgroundTint="@color/colorAccent"
        android:progressTint="@color/colorAccent"
        android:scaleX="0.8"
        android:scaleY="0.8"/>


</LinearLayout>

